pipeline {
    agent {
        docker { image 'node:16-alpine' }
    }
    options {
        timestamps()
        ansiColor('xterm')
        timeout(time: 2, unit: 'MINUTES')
    }
    stages {
        stage("build") {
            steps {
                sh 'docker build -t hello_there .'
            }
        }
        stage("run") {
            steps {
                sh 'docker run --rm hello_there'
            }
        }
    }
}