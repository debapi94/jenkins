def gv

pipeline {
    agent any
    options {
        timestamps()
        ansiColor('xterm')
        timeout(time: 2, unit: 'MINUTES')
    }
    parameters {
        string (name:"BUILD_PARAM", defaultValue: "", description:"provide a build param")
    }
    environment{
        RAJ_USER = 22
        RAJ_INPUT = 1
        RAJ_ID = getEnvVar(env.RAJ_INPUT)
    }
    stages {
        stage("build") {
            steps {
                echo 'build'
                echo "${env.BUILD_NUMBER}"
                echo '${BUILD_NUMBER}'
                sh 'echo BUILD_NUMBER = ${BUILD_NUMBER}'
                echo "${RAJ_USER.padRight(5) + 'abcd'}"
                
                // script {
                //     switch(env.RAJ_USER){
                //         case "22": env.RAJ_ID = 1; break
                //         case "23": env.RAJ_ID = 2; break
                //     }
                // }
                
                echo "${RAJ_ID}"

                script{
                    gv = load "script1.groovy"
                    a = gv.getVal()
                    echo "${a}"
                }

                echo "BUILD_PARAM: ${BUILD_PARAM}"
            }
        }
        stage("run") {
            steps {
                echo 'run'
                
                echo "${RAJ_ID}"
            }
        }
    }
}

def getEnvVar(inp){
    switch(inp){
                case '1': return 11
                case '2': return 22
            }
}